<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical" 
    android:background="#ffffff"
    >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
	      	
	      	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" >
	          
	          <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	      	    android:layout_marginLeft="10dp"
	      	    android:layout_marginRight="10dp"
	      	    android:layout_marginTop="10dp"
	            android:orientation="vertical" >
		              <ImageView
				      	    android:layout_gravity="left"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:src="@drawable/logo_about_app" />

              </LinearLayout>
			<LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	      	    android:layout_marginLeft="10dp"
	      	    android:layout_marginRight="10dp"
	      	    android:layout_marginTop="10dp"
	            android:orientation="vertical" >

		              <teeza.application.helpme.custom_view.CustomText
		                  android:layout_width="wrap_content"
		                  android:layout_height="wrap_content"
		                  android:layout_gravity="left"
		                  android:fontFamily="DBHelvethaicaX.ttf"
		                  android:text="Help Me App."
		                  android:textColor="#E30053"
		                  android:textSize="25dp" />
		              
		              <teeza.application.helpme.custom_view.CustomText
		                  android:layout_width="wrap_content"
		                  android:layout_height="wrap_content"
		                  android:layout_gravity="left"
		                  android:fontFamily="DBHelvethaicaX.ttf"
		                  android:text="Version 1.0.0"
		                  android:textColor="#777777"
		                  android:textSize="15dp" />
		              
		              <teeza.application.helpme.custom_view.CustomText
		                  android:layout_width="wrap_content"
		                  android:layout_height="wrap_content"
		                  android:layout_gravity="left"
		                  android:fontFamily="DBHelvethaicaX.ttf"
		                  android:text="Developer by MFEC Company Limited."
		                  android:textColor="#777777"
		                  android:textSize="15dp" />

              </LinearLayout>
        </LinearLayout>
	      	<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#E30053"
                android:orientation="vertical" >
            </LinearLayout>
			<teeza.application.helpme.custom_view.CustomText
			    android:id="@+id/aboutApp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="10dp"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:layout_marginTop="10dp"
			    android:fontFamily="DBHelvethaicaX.ttf"
			    android:textColor="#777777"
			    android:textSize="17sp" />

        </LinearLayout>
   </ScrollView>

    <RelativeLayout
        android:layout_weight="1"
		android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3" >

              <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="#ffffff"
                android:background="#717171"
                android:text="ยกเลิก" />
           
            
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
