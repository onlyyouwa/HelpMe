<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#e30053"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/picplace"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/menu_2_claim" />

        <teeza.application.helpme.custom_view.CustomText
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/picplace"
            android:fontFamily="DBHelvethaicaX.ttf"
            android:text="เคลมย้อนหลัง"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/addmore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/header_galleries" />
    </RelativeLayout>

    <teeza.application.helpme.custom_view.CustomText
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout01"
        android:layout_margin="10dp"
        android:fontFamily="DBHelvethaicaX.ttf"
        android:text="To : "
        android:textSize="24sp" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1120dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.ExpandableHeightGridView
                    android:id="@+id/UploadList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:columnWidth="90dp"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp" />
            </LinearLayout>

            <!-- Subject Action -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ededed"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.CustomEdittext
                    android:id="@+id/Subject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:ems="10"
                    android:fontFamily="DBHelvethaicaX.ttf"
                    android:hint="ชื่อเหตุการณ์"
                    android:singleLine="true"
                    android:textSize="28sp" >

                    <requestFocus />
                </teeza.application.helpme.custom_view.CustomEdittext>
            </LinearLayout>

            <!-- num Active -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >

                    <teeza.application.helpme.custom_view.CustomText
                        android:id="@+id/CustomEdittext01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:editable="false"
                        android:fontFamily="DBHelvethaicaX.ttf"
                        android:hint="เลขรับแจ้ง"
                        android:textCursorDrawable="@null"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:orientation="vertical" >

                    <teeza.application.helpme.custom_view.CustomEdittext
                        android:id="@+id/num_active"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="#ededed"
                        android:editable="false"
                        android:ems="10"
                        android:fontFamily="DBHelvethaicaX.ttf"
                        android:hint="เลขรับแจ้งอุบัติเหตุ"
                        android:textCursorDrawable="@null"
                        android:textSize="28sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- num policy -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >

                    <teeza.application.helpme.custom_view.CustomText
                        android:id="@+id/CustomEdittext02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:fontFamily="DBHelvethaicaX.ttf"
                        android:hint="เลขที่กรมธรรม์"
                        android:textCursorDrawable="@null"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:orientation="vertical" >

                    <teeza.application.helpme.custom_view.CustomEdittext
                        android:id="@+id/num_policy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="#ededed"
                        android:ems="10"
                        android:fontFamily="DBHelvethaicaX.ttf"
                        android:hint="เลขที่กรมธรรม์"
                        android:nextFocusDown="@+id/num_car"
                        android:singleLine="true"
                        android:textCursorDrawable="@null"
                        android:textSize="28sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- num car -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >

                    <teeza.application.helpme.custom_view.CustomText
                        android:id="@+id/CustomEdittext03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:fontFamily="DBHelvethaicaX.ttf"
                        android:hint="ทะเบียนรถ"
                        android:textCursorDrawable="@null"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:orientation="vertical" >

                    <teeza.application.helpme.custom_view.CustomEdittext
                        android:id="@+id/num_car"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="#ededed"
                        android:ems="10"
                        android:fontFamily="DBHelvethaicaX.ttf"
                        android:hint="ทะเบียนรถ"
                        android:nextFocusDown="@+id/name"
                        android:singleLine="true"
                        android:textCursorDrawable="@null"
                        android:textSize="28sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- DateTime Action -->


            <!-- Name -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ededed"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.CustomEdittext
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:ems="10"
                    android:fontFamily="DBHelvethaicaX.ttf"
                    android:hint="ชื่อผู้เอาประกัน"
                    android:singleLine="true"
                    android:textSize="28sp" >
                </teeza.application.helpme.custom_view.CustomEdittext>
            </LinearLayout>

            <!-- location Action -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ededed"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.CustomEdittext
                    android:id="@+id/datepiker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:editable="false"
                    android:ems="10"
                    android:fontFamily="DBHelvethaicaX.ttf"
                    android:hint="วันที่เกิดเหตุ"
                    android:textCursorDrawable="@null"
                    android:textSize="28sp" >
                </teeza.application.helpme.custom_view.CustomEdittext>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ededed"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.CustomEdittext
                    android:id="@+id/location_action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:ems="10"
                    android:fontFamily="DBHelvethaicaX.ttf"
                    android:hint="สถานที่เกิดเหตุ"
                    android:nextFocusDown="@+id/detail"
                    android:singleLine="true"
                    android:textSize="28sp" >
                </teeza.application.helpme.custom_view.CustomEdittext>
            </LinearLayout>

            <!-- sub data action -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                android:background="#ededed"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.CustomEdittext
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:ems="10"
                    android:fontFamily="DBHelvethaicaX.ttf"
                    android:gravity="top|center_vertical"
                    android:hint="รายละเอียดการเกิดเหตุ"
                    android:nextFocusDown="@+id/address"
                    android:singleLine="true"
                    android:textSize="24sp" >
                </teeza.application.helpme.custom_view.CustomEdittext>
            </LinearLayout>

            <!-- Address -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ededed"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.CustomEdittext
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:ems="10"
                    android:fontFamily="DBHelvethaicaX.ttf"
                    android:hint="ชื่อ ที่อยู่ ที่ติดต่อได้"
                    android:nextFocusDown="@+id/phone"
                    android:singleLine="true"
                    android:textSize="28sp" >
                </teeza.application.helpme.custom_view.CustomEdittext>
            </LinearLayout>

            <!-- Phone -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ededed"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.CustomEdittext
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:ems="10"
                    android:fontFamily="DBHelvethaicaX.ttf"
                    android:hint="โทรศัพท์ที่ติดต่อได้"
                    android:inputType="phone"
                    android:nextFocusDown="@+id/status_car"
                    android:singleLine="true"
                    android:textSize="28sp" >
                </teeza.application.helpme.custom_view.CustomEdittext>
            </LinearLayout>

            <!-- status car -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ededed"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.CustomEdittext
                    android:id="@+id/status_car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:ems="10"
                    android:fontFamily="DBHelvethaicaX.ttf"
                    android:hint="สภาพรถ"
                    android:nextFocusDown="@+id/loss"
                    android:singleLine="true"
                    android:textSize="28sp" >
                </teeza.application.helpme.custom_view.CustomEdittext>
            </LinearLayout>
            <!-- loss -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ededed"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.CustomEdittext
                    android:id="@+id/loss"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:ems="10"
                    android:fontFamily="DBHelvethaicaX.ttf"
                    android:hint="ความเสียหายโดยประมาณ"
                    android:inputType="phone"
                    android:nextFocusDown="@+id/location_check"
                    android:singleLine="true"
                    android:textSize="28sp" >
                </teeza.application.helpme.custom_view.CustomEdittext>
            </LinearLayout>

            <!-- Location check -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ededed"
                android:orientation="vertical" >

                <teeza.application.helpme.custom_view.CustomEdittext
                    android:id="@+id/location_check"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ededed"
                    android:ems="10"
                    android:fontFamily="DBHelvethaicaX.ttf"
                    android:hint="สถานที่ที่เราสามารถตรวจสอบได้"
                    android:nextFocusDown="@+id/UploadQueueFooter"
                    android:singleLine="true"
                    android:textSize="28sp" >
                </teeza.application.helpme.custom_view.CustomEdittext>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/UploadQueueFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3" >

                <Button
                    android:id="@+id/StartUploadBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:background="#e30053"
                    android:text="ส่งข้อมูล"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="#717171"
                    android:text="ยกเลิก"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

