<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#e30053"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/picplace"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/menu_7_setting" />

        <teeza.application.helpme.custom_view.CustomText
	        android:fontFamily="DBHelvethaicaX.ttf"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/picplace"
            android:text="ตั้งค่า"
            android:textColor="#ffffff"
            android:textSize="28sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2" >

                <teeza.application.helpme.custom_view.CustomText
	                android:fontFamily="DBHelvethaicaX.ttf"
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="รหัสผ่านปัจจุบัน "
                    android:textSize="24sp"
                    android:textColor="#000000" />

                <teeza.application.helpme.custom_view.CustomEdittext
	                android:fontFamily="DBHelvethaicaX.ttf"
                    android:id="@+id/oldpass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="พิมพ์รหัสผ่านปัจจุบัน"
                    android:textCursorDrawable="@null"
                    android:background="#00ffffff"
                    android:inputType="textPassword"
                    android:textSize="24sp" >

                    <requestFocus />
                </teeza.application.helpme.custom_view.CustomEdittext>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="#878787"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2" >

                <teeza.application.helpme.custom_view.CustomText
	                android:fontFamily="DBHelvethaicaX.ttf"
                    android:id="@+id/priceinsu2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="รหัสผ่านใหม่ "
                    android:textSize="24sp"
                    android:textColor="#000000" />

                <teeza.application.helpme.custom_view.CustomEdittext
	                android:fontFamily="DBHelvethaicaX.ttf"
                    android:id="@+id/newpass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textCursorDrawable="@null"
                    android:hint="พิมพ์รหัสผ่านใหม่"
                    android:background="#00ffffff"
                    android:inputType="textPassword"
                    android:textSize="24sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="#878787"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2" >

                <teeza.application.helpme.custom_view.CustomText
	                android:fontFamily="DBHelvethaicaX.ttf"
                    android:id="@+id/TextView01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ยืนยันรหัสผ่านใหม่ "
                    android:textSize="24sp"
                    android:textColor="#000000" />

                <teeza.application.helpme.custom_view.CustomEdittext
	                android:fontFamily="DBHelvethaicaX.ttf"
                    android:id="@+id/confnewpass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="ยืนยันรหัสผ่านใหม่"
                    android:background="#00ffffff"
                    android:textCursorDrawable="@null"
                    android:inputType="textPassword"
                    android:textSize="24sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <teeza.application.helpme.custom_view.CustomText
	            android:fontFamily="DBHelvethaicaX.ttf"
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#ff0000"
                android:text="*มีข้อผิดพลาด"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

 </LinearLayout>

 <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/UploadQueueFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3" >

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="#e30053"
                android:text="บันทึกข้อมูล"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="#717171"
                android:text="ยกเลิก"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
